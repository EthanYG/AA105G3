<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0">
	<display-name>AA105G3</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>
	<!--連線池註冊 -->
	<resource-ref>
		<description>DB Connection</description>
		<res-ref-name>jdbc/FoodTimeDB</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
	<!--員工註冊 -->
	<servlet>
		<servlet-name>EmpServlet</servlet-name>
		<servlet-class>com.emp.controller.EmpServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>EmpServlet</servlet-name>
		<url-pattern>/emp/emp.do</url-pattern>
	</servlet-mapping>
	<!--權限 -->
	<servlet>
		<servlet-name>AuthServlet</servlet-name>
		<servlet-class>com.auth.controller.AuthServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AuthServlet</servlet-name>
		<url-pattern>/auth/auth.do</url-pattern>
	</servlet-mapping>
	<!--員工權限註冊 -->
	<servlet>
		<servlet-name>Emp_authServlet</servlet-name>
		<servlet-class>com.emp_auth.controller.Emp_authServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Emp_authServlet</servlet-name>
		<url-pattern>/emp_auth/emp_auth.do</url-pattern>
	</servlet-mapping>
	<!--食譜註冊 -->
	<servlet>
		<servlet-name>RecipeServlet</servlet-name>
		<servlet-class>com.recipe.controller.RecipeServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>RecipeServlet</servlet-name>
		<url-pattern>/recipe/recipe.do</url-pattern>
	</servlet-mapping>
	<!-- 我的最愛註冊 -->
	<servlet>
		<servlet-name>CollectionServlet</servlet-name>
		<servlet-class>com.collection.controller.CollectionServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>CollectionServlet</servlet-name>
		<url-pattern>/collection/collection.do</url-pattern>
	</servlet-mapping>
	<!-- 客戶需求註冊 -->
	<servlet>
		<servlet-name>Customer_demandServlet</servlet-name>
		<servlet-class>com.customer_demand.controller.Customer_demandServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Customer_demandServlet</servlet-name>
		<url-pattern>/customer_demand/customer_demand.do</url-pattern>
	</servlet-mapping>
	<!-- 好友註冊 -->
	<servlet>
		<servlet-name>Frd_listServlet</servlet-name>
		<servlet-class>com.frd_list.controller.Frd_listServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Frd_listServlet</servlet-name>
		<url-pattern>/frd_list/frd_list.do</url-pattern>
	</servlet-mapping>
	<!--會員註冊 -->
	<servlet>
		<servlet-name>MemberServlet</servlet-name>
		<servlet-class>com.member.controller.MemberServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>MemberServlet</servlet-name>
		<url-pattern>/member/member.do</url-pattern>
	</servlet-mapping>


  
 
</web-app>